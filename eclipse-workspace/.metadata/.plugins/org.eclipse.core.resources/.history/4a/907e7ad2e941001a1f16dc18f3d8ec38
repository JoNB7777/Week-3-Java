package com.qa.circus;

public class Elephant {
	String species; 
	String colour;
	int legs;
	
	public Elephant(String mySpecies, String myColour) {
		species = mySpecies;
		colour = myColour;
		legs= 4;
		System.out.println("An elephant is born");
	}
	
	public void haveMudBath() {
		colour = "Brown";
	}
	
	public void getPainted(String paint) {
		colour = paint;
	}
}
